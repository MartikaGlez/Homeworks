#include <iostream>
using namespace std;

int number1, number2;

int resta (int x, int y)
{ int a;
  a=x-y;
  return a;}
int mult (int x, int y)
{ int b;
  b= x*y;
  return b;}
int div (int x, int y)
{ int c;
  c=x/y;
  return c;}
int res (int x, int y)
{ int d;
  d=(x%y);
  return d;}

int main()
{
  cout <<"Introduce an integer number ";
  cin>>number1;
  cout <<"Introduce another integer number ";
  cin>>number2;
  cout <<"The difference of these two numbers is: "<<resta (number1,number2);
  cout <<endl;
  cout <<"The product of these two numbers is: "<<mult (number1, number2);
  cout <<endl;
  cout <<"The integer division of these two numbers is: "<<div (number1, number2);
  cout <<endl;
  cout <<"The remainder from division of the two numbers is: "<<res (number1, number2);
  cout <<endl;
}
